section(class="contact-us text-capitalize text-white text-center")
    .container
        .row
            div(class="col-lg-6 col-sm-12 info")
                img(class="img-responsive" src="images/dream-white-logo.png" alt="logo")
                .contact-info
                    .email
                        i(class="fa fa-envelope-o")
                        span البريد الإلكتروى: 
                        .
                            mail@dreamtv.com
                    .phone
                        i(class="fa fa-volume-control-phone")
                        span الهاتف: 
                        .
                            (123) 4567851490
                hr
                .rule
                    .terms
                        a(href="terms.html") شروط الخدمة
                    .policy
                        a(href="policy.html") سياسة الخصوصية
            div(class="col-lg-6 col-sm-12 forms")
                h2 تواصل معنا
                form(action="")
                    div(class="form-group group")
                        input(name="first_name" type="text" class="form-control" placeholder="الإسم *" id="exampleInputPassword1")
                    div(class="form-group group")
                        input(name="email" type="email" class="form-control" placeholder="* البريد الإلكترونى" id="exampleInputPassword2")
                    div(class="form-group group")
                        input(name="subject" type="text" class="form-control" placeholder="الموضوع" id="exampleInputPassword2")
                    div(class="form-group group")
                        textarea(name="teaxtarea" class="form-control" placeholder="رسالتك" id="exampleFormControlTextarea1" rows="3")
                    button(type="submit" class="btn btn-primary") ارسل